        android:layout_marginTop="525dp"
        android:text="@string/default_value"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewForefinger"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="575dp"
        android:text="@string/forefinger"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar3"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="50dp"
        android:layout_height="400dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="100dp"
        android:max="100"
        android:progress="10"
        android:progressDrawable="@drawable/progress_scale_drawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultsView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="305dp"
        android:layout_marginTop="525dp"
        android:text="@string/default_value"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMiddlefinger"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="575dp"
        android:text="@string/middlefinger"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

